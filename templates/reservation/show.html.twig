{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
     <div class="container mt-4">
        <h1>Réservation</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">Id</th>
                    <td>{{ reservation.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ reservation.client.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Prenom</th>
                    <td>{{ reservation.client.prenom }}</td>
                </tr>
                <tr>
                    <th scope="row">Email</th>
                    <td>{{ reservation.client.email }}</td>
                </tr>
                <tr>
                    <th scope="row">Adresse</th>
                    <td>{{ reservation.client.adresse }}</td>
                </tr>
                <tr>
                    <th scope="row">Code Postal</th>
                <td>{{ reservation.client.postal }}</td>
                </tr>
                <tr>
                    <th scope="row">Numéro de chambre</th>
                    <td>{{ reservation.chambre.numeroChambre }}</td>
                </tr>
                <tr>
                    <th scope="row">Places dans la chambre</th>
                    <td>{{ reservation.chambre.nombrePlaces }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_reservation_index') }}" class="btn btn-primary">Retour à la liste</a>

        <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-warning">Modifier</a>

        {{ include('reservation/_delete_form.html.twig') }}
    </div>

{% endblock %}
